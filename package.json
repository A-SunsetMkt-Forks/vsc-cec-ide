{
  "name": "cec-ide",
  "displayName": "CEC-IDE",
  "description": "国产化你的VSCode,来源于CEC-IDE,有敏感词检测功能、防沉迷模式,这下自主创新了!",
  "publisher": "qcqx",
  "repository": {
    "type": "git",
    "url": "https://github.com/qxchuckle/vsc-cec-ide.git"
  },
  "version": "0.2.8",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUriOpen"
  ],
  "main": "./out/extension.js",
  "icon": "resource/images/CEC-IDE.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cec-ide",
          "title": "CEC-IDE",
          "icon": "./resource/images/CEC-IDE.svg"
        }
      ]
    },
    "views": {
      "cec-ide": [
        {
          "id": "cec-sidebar-main",
          "name": "主界面",
          "icon": "./resource/images/CEC-IDE.svg",
          "type": "webview",
          "contextualTitle": "主界面",
          "caching": "none"
        }
      ]
    },
    "commands": [
      {
        "command": "cec-ide.cec-ide",
        "title": "CEC-IDE"
      },
      {
        "command": "cec-ide.cec-ide-restore",
        "title": "CEC-IDE-RESTORE"
      },
      {
        "command": "cec-ide.mark-sensitive-words",
        "title": "检测敏感词"
      },
      {
        "command": "cec-ide.stop-mark-sensitive-words",
        "title": "停止检测敏感词"
      },
      {
        "command": "cec-ide.uploadSensitiveWordsFile",
        "title": "CEC-UploadSensitiveWordsFile"
      },
      {
        "command": "cec-ide.resetSensitiveWordsFile",
        "title": "CEC-ResetSensitiveWordsFile"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "cec-ide.mark-sensitive-words",
          "group": "navigation@1"
        },
        {
          "when": "editorTextFocus",
          "command": "cec-ide.stop-mark-sensitive-words",
          "group": "navigation@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cec-ide.mark-sensitive-words",
        "key": "alt+shift+m",
        "mac": "alt+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "cec-ide.stop-mark-sensitive-words",
        "key": "alt+shift+n",
        "mac": "alt+shift+n",
        "when": "editorTextFocus"
      }
    ],
    "icons": {
      "cec-ide-line": {
        "description": "cec-ide-line",
        "default": {
          "fontPath": "./resource/images/CEC-IDE-LINE.woff",
          "fontCharacter": "\\E900"
        }
      }
    },
    "filters": {
      "description": "cec-ide-line",
      "textFiles": [
        "txt"
      ]
    },
    "configuration": {
      "title": "CEC-IDE",
      "properties": {
        "cec-ide-sidebar.activateVip": {
          "type": "boolean",
          "default": true,
          "description": "是否激活VIP"
        },
        "cec-ide-sidebar.grade": {
          "type": "string",
          "default": "SVIP10",
          "description": "会员等级"
        },
        "cec-ide-sidebar.deadline": {
          "type": "string",
          "default": "2077-07-07",
          "description": "会员截止日期"
        },
        "cec-ide-sidebar.username": {
          "type": "string",
          "default": "TheUser",
          "description": "自定义用户名"
        },
        "cec-ide-sidebar.avatar": {
          "type": "string",
          "default": "",
          "description": "自定义侧边栏头像,如C:\\picture\\avatar.png"
        },
        "cec-ide-adolescentMode.enabled": {
          "type": "boolean",
          "default": true,
          "description": "开启青少年防沉迷模式(需重启编辑器)"
        },
        "cec-ide-adolescentMode.antiAddictionTime": {
          "type": "number",
          "default": 2,
          "description": "设置每日防沉迷时间(小时)"
        },
        "cec-ide-adolescentMode.turnOffActivationReminder": {
          "type": "boolean",
          "default": false,
          "description": "永久关闭提醒开启青少年模式的弹窗"
        },
        "cec-ide-adolescentMode.turnOffAntiAddictionReminder": {
          "type": "boolean",
          "default": false,
          "description": "永久关闭防沉迷提醒的弹窗"
        }
      }
    }
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "mint-filter": "^4.0.3"
  }
}
